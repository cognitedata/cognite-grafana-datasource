{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "no-reference": false,
    "no-increment-decrement": false,
    "import-name": false,
    "function-name": [
      true,
      {
        "method-regex": "^\\$?[\\w\\d]+$",
        "function-regex": "^[A-Za-z][\\w\\d]+$"
      }
    ],
    "variable-name": ["allow-camel-case"]
  },
  "linterOptions": {
    "exclude": ["*/**/grammar.ts"]
  }
}
