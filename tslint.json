{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "no-reference": false,
    "no-increment-decrement": false,
    "import-name": [
      true,
      {
        "lodash": "_",
        "react": "React",
        "datasource": "CogniteDatasource",
        "utils": "Utils"
      }
    ],
    "function-name": {
      "options": {
        "function-regex": "^\\$?[\\w\\d]+$"
      }
    },
    "variable-name": ["allow-camel-case"]
  },
  "linterOptions": {
    "exclude": ["*/**/grammar.ts"]
  }
}
