{
  "type": "datasource",
  "name": "Cognite Data Fusion",
  "id": "cognitedata-datasource",

  "info": {
    "description": "Cognite Data Fusion datasource",
    "author": {
      "name": "Cognite",
      "url": "https://cognite.com"
    },
    "keywords": ["cognite", "timeseries", "iot"],
    "logos": {
      "small": "img/Cognite_logo.svg",
      "large": "img/Cognite_logo.svg"
    },
    "links": [
      {
        "name": "Project site",
        "url": "https://github.com/cognitedata/cognite-grafana-datasource"
      },
      {
        "name": "Apache License",
        "url": "https://github.com/cognitedata/cognite-grafana-datasource/blob/master/LICENSE"
      }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },

  "dependencies": {
    "grafanaVersion": "5.4.x",
    "plugins": []
  },

  "routes": [
    {
      "path": "cogniteapi",
      "url": "https://{{if .JsonData.cogniteApiUrl}}{{.JsonData.cogniteApiUrl}}{{else}}api.cognitedata.com{{end}}/api/v1/projects",
      "headers": [
        {
          "name": "api-key",
          "content": "{{.SecureJsonData.cogniteDataPlatformApiKey}}"
        },
        {
          "name": "x-cdp-sdk",
          "content": "CogniteGrafanaDatasource:%VERSION%"
        }
      ]
    },
    {
      "path": "cogniteloginstatus",
      "method": "GET",
      "url": "https://{{if .JsonData.cogniteApiUrl}}{{.JsonData.cogniteApiUrl}}{{else}}api.cognitedata.com{{end}}/login/status",
      "headers": [
        {
          "name": "api-key",
          "content": "{{.SecureJsonData.cogniteDataPlatformApiKey}}"
        }
      ]
    }
  ],

  "queryOptions": {
    "maxDataPoints": true
  },

  "metrics": true,
  "annotations": true
}
